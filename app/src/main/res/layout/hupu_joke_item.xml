<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.nba.news.view.widget.RoundImageView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/rv_profile_image"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <TextView
        android:id="@+id/tv_id"
        android:text="allen"
        android:layout_marginTop="15dp"
        android:textSize="13sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/rv_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@id/rv_profile_image"
        android:layout_below="@id/tv_id"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
        android:text="2017"
        android:id="@+id/tv_date"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_below="@id/rv_profile_image"
        android:maxLines="7"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textColor="@android:color/black"
        android:layout_marginRight="15dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_read_all"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="全文"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_review"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/tv_read_all"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_like"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_like"
                android:src="@drawable/shenhe_ding_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_praise"
                android:layout_width="wrap_content"
                android:text="100"
                android:textColor="@color/gray_text_color"
                android:drawablePadding="3dp"
                android:textSize="10sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dislike"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_dislike"
                android:src="@drawable/shenhe_cai_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_criticism"
                android:layout_width="wrap_content"
                android:text="100"
                android:textColor="@color/gray_text_color"
                android:drawablePadding="3dp"
                android:textSize="10sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_forward"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_forward"
                android:src="@drawable/forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_forwarding"
                android:textColor="@color/gray_text_color"
                android:layout_width="wrap_content"
                android:text="100"
                android:drawablePadding="3dp"
                android:textSize="10sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_command"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_command"
                android:src="@drawable/commend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_command"
                android:layout_width="wrap_content"
                android:text="100"
                android:drawablePadding="3dp"
                android:textColor="@color/gray_text_color"
                android:textSize="10sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_below="@id/ll_review"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


</RelativeLayout>