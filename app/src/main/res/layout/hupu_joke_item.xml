<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <com.nba.news.view.widget.RoundImageView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/rv_profile_image"
        android:background="@drawable/commend"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <TextView
        android:id="@+id/tv_id"
        android:text="allen"
        android:layout_marginTop="15dp"
        android:textSize="13sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/rv_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@id/rv_profile_image"
        android:layout_below="@id/tv_id"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
        android:text="2017"
        android:id="@+id/tv_date"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_below="@id/rv_profile_image"
        android:maxLines="7"
        android:text="红红火火恍恍惚惚和红红火火"
        android:layout_marginLeft="15dp"
        android:textColor="@android:color/black"
        android:layout_marginRight="15dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:id="@+id/ll_review"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/tv_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_praise"
            android:layout_width="0dp"
            android:drawablePadding="7dp"
            android:text="100"
            android:textSize="10sp"
            android:drawableLeft="@drawable/shenhe_ding_pic"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableLeft="@drawable/shenhe_cai_pic"
            android:id="@+id/tv_criticism"
            android:layout_width="0dp"
            android:drawablePadding="7dp"
            android:textSize="10sp"
            android:text="200"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_forwarding"
            android:text="300"
            android:drawablePadding="7dp"
            android:drawableLeft="@drawable/forward"
            android:layout_width="0dp"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_command"
            android:drawableLeft="@drawable/commend"
            android:drawablePadding="7dp"
            android:text="400"
            android:layout_width="0dp"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_below="@id/ll_review"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


</RelativeLayout>